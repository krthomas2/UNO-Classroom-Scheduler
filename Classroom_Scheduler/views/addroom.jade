extends layout
block content
    title #{title}
    div.row
      h4 Please Fill out the following room information:
    div.row
      form(method='post', name = 'addroom', action='/addRoom')
         div.class.col-lg-3
            input(type='text', name='Room_Number',placeholder ="Room Number")
         div.class.col-lg-3
             input(type="text", name='Max_Capacity', placeholder="Max Capacity")
         div.class.col-lg-3
             input(type="text", name = 'Spec_Trait', placeholder="Lab?")
         div.class.col-sm-2
             input(type='submit', class="btn btn-danger")
